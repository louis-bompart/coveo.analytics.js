{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es5",
        "declarationDir": "./dist/definitions",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "lib": ["es5", "dom", "scripthost", "es6"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"]
}
