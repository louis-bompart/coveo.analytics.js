{
  "name": "coveo.analytics",
  "version": "0.4.0",
  "description": "ðŸ“ˆ Coveo analytics client (node and browser compatible) ",
  "main": "dist/index.js",
  "browser": "dist/bundle.js",
  "scripts": {
    "lint": "tslint -s \"node_modules/tslint-loader/formatters/\" \"test/**/*.ts\" \"src/**/*.ts\"",
    "build:webpack": "webpack",
    "build:tsc": "tsc",
    "build": "npm run-script lint && npm run-script build:webpack && npm run-script build:tsc",
    "test": "tsc -p tsconfig.test.json && nyc ava \"**/*test.js\"",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rm -rf dist/*"
  },
  "author": "Pierre-Alexandre St-Jean <pastjean@coveo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/coveo/coveo.analytics.js.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/express": "^4.0.33",
    "@types/express-serve-static-core": "^4.0.37",
    "@types/mime": "0.0.29",
    "@types/node": "^6.0.45",
    "@types/serve-static": "^1.7.31",
    "@types/sinon": "^1.16.31",
    "@types/whatwg-fetch": "0.0.32",
    "ava": "0.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.16.0",
    "body-parser": "1.15.1",
    "coveralls": "2.11.14",
    "es6-promise": "4.0.2",
    "exports-loader": "0.6.3",
    "express": "4.14.0",
    "isomorphic-fetch": "2.2.1",
    "jsdom": "9.8.2",
    "nyc": "8.3.2",
    "sinon": "1.17.6",
    "ts-loader": "^0.9.3",
    "tslint": "3.15.1",
    "tslint-loader": "2.1.5",
    "typescript": "2.0.3",
    "webpack": "1.13.2"
  },
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js",
    "dist/**/*.js.map",
    "src/**/*.ts",
    "LICENSE"
  ],
  "ava": {
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  }
}
