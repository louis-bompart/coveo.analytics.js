{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$ts-webpack",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "^.*Compiling....*$"
                        },
                        "endsPattern": {
                            "regexp": "^.*Compiled successfully.*$"
                        }
                    }
                },
                "$tslint-webpack-watch"
            ]
        }
    ]
}
